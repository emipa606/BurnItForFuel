<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Coal</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef/comps/li[@Class = "CompProperties_Refuelable"]/../../building/fixedStorageSettings/filter/thingDefs</xpath>
      <value>
        <li>Coal</li>
        <li>Charcoal</li>
      </value>
    </match>
  </Operation>
  
